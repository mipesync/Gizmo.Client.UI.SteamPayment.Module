@inherits Gizmo.Web.Components.CustomDOMComponentBase;

<div class="giz-header__user-menu-item">
    <button class="steam-payment-button" onclick="@HandleClickAsync">
        <img src="data:image/svg+xml;base64," alt='loading' class="giz-module-icon"/>
        <span class="steam-payment-button-title">@AssemblyResourcesLocalizationService.GetLocalizedStringValue(typeof(SteamPaymentModule), "GIZ_STEAM_PAYMENT_INTENT_TITLE")</span>
    </button>
</div>

<style>
    .steam-payment-button {
        display: flex;
        height: 48px;
        padding: 9px 16px;
        background-color: rgba(250, 250, 250, 0.16);
        border-radius: 8px;
        justify-content: center;
        align-items: center;
        gap: 8px;
        cursor: pointer;
        color: rgba(255, 255, 255, 0.75);
        border: none;
        font-weight: bold;
    }
    
    .steam-payment-button:hover {
        background-color: #0091FF;
    }
    
    @@font-face {
    font-family: 'DINBold';
    src: url('wwwroot/DIN-Bold.otf') format('opentype');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
}

.steam-payment-button-title {
    font-family: 'DINBold', sans-serif;
    font-weight: bold;
    font-size: 16px;
}
</style>